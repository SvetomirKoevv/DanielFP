@using BusinessLayer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/listing.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/filter.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/newfavicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i>RevHaus</i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark main-link" asp-area="" asp-controller="Listings" asp-action="AllListings">Обяви</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark main-link" asp-area="" asp-controller="AuctionListings" asp-action="AllAuctions">Аукциони</a>
                        </li>
                        @{
                            if (User.IsInRole(Role.Administrator.ToString()))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark main-link" asp-area="" asp-controller="Listings" asp-action="Index">Таблица с обяви</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark main-link" asp-area="" asp-controller="AuctionListings" asp-action="Index">Таблица с аукциони</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark main-link" asp-area="" asp-controller="Users" asp-action="Index">Таблица с потребителите</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Даниел Николов - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    body{
        background-image: src('../../wwwroot/background.jfif');
    }

    @@media (max-width: 1050px) {
        .main-link{
            font-size: 14px;
        }
    }

    @@media (max-width: 1000px) {
        .listing-details-top {
            flex-direction: column-reverse;
            justify-content: center;
            align-items: center;
        }

        .listing-details-top > div{
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .listing-details-bottom{
            justify-content: center;
            align-items: center;    
        }

    }

    @@media (max-width: 850px) {
        #main-title-text {
            font-size: 38px;
        }

        #btn-first{
            margin-bottom: 20px;
        }

        section > .container > p{
            font-size: 14px !important;
        }

        section > .container a {
            font-size: 14px !important;
        }
    }
</style>
